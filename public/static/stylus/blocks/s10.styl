.nosotros-css
	.footer
		background-color: #06160d
	.footer__suscripcion
		display none
.b10
	background-color: #06160d
	padding-top 110px

.b10__title
	text-align center
	padding-bottom 45px
.b10__nav
	display flex
	justify-content center
	padding-bottom 45px
	li
		margin 0 12px
	.general__btn
		background-color #fff
		&:before
			opacity: 0
		span
			color #787878
		&.active
			&:before
				opacity: 1
			span
				color #fff
.b10__cnt__slider
	max-width 1440px
	width: 100%
	margin 0 auto
	position relative
.b10__center
	// position absolute
	// left 0px
	// top 0px
	position relative
	width: 100%
	height 100%
	z-index: 2
.b10__item
	position absolute
	left 0px
	top 0px
	width: 100%
	visibility hidden
	opacity: 0
	&.active
		position relative
		visibility: visible
		opacity: 1
.b10__slider
	.owl-nav
		position absolute
		left 0px
		top 0px
		width: 100%
		height 100%
		display flex
		align-items center
		justify-content space-between
		padding 0 80px
		box-sizing border-box
		visibility hidden
	.owl-next
	.owl-prev
		color #fff
		font-size: 50px
		visibility: visible
.b10__slide
	position relative
	figure
		padding-top 37.9%
		width: 100%
		height 0
		background-repeat no-repeat
		background-size cover
		background-position center center
		&:before
			content ''
			width: 100%
			height 70%
			background linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.9) 94%)
			position absolute
			left 0px
			bottom 0px
.b10__slide__text
	position absolute
	left 0px
	right 0px
	margin auto
	bottom 0px		
	width: 100%
	text-align center
	max-width 740px
	width: 94%
	padding-bottom 60px
	.general__title
		h2
			line-height: 1
			margin-bottom 16px
		p
			font-size: 20px
			font-family: t-1
			color #fff
			margin 0

.b1__cnt__tab
	max-width 640px
	width: 100%
	margin auto
	position relative
	margin-top 45px
	z-index: 2
	min-height 180px
	&:before
		content ''
		width: 3px
		height 55px
		background-color #fff
		display block
		position absolute
		left 0px
		right 0px
		margin auto
		top -80px
.b10__tab
	// position absolute
	left 0px
	top 0px
	width: 100%
	p
		color #ffffff
		opacity: 0.5
		margin 0
		line-height: 1.47
		font-size: 15px
		text-align center
	
.b10__btn
	padding-top 23px
	display flex
	justify-content center
	.general__btn
		width: 216px
		
@media screen and (max-width 960px)
	.b10__slide figure
		padding-top 60%
	.b1__cnt__tab
		width: 86%
		margin auto
		margin-top 30px
@media screen and (max-width 768px)
	.b10
		padding-top 60px
	.b10__nav .general__btn
		padding 0 10px
		text-align center
@media screen and (max-width 600px)
	
	.b10__slide figure
		padding-top 80%
	.b1__slide__text .general__title p
		font-size: 16px
	.b10__slider .owl-nav
		padding 0 20px
		padding-bottom 30px
	.b10__slider .owl-next, .b10__slider .owl-prev
		font-size: 35px
	.b1__cnt__tab
		margin-top 60px
		&:before
			top -90px
	.b10__slide__text .general__title h2
		margin-bottom 5px
	.b10__slide__text .general__title p
		font-size: 18px

































