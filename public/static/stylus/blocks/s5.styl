
.b5
	position relative
	// overflow hidden
	background-color #06160d
.b5__hoja1
	position absolute
	bottom -80px
	left 5%
	z-index: 3
	img
		display block
		max-width 100%
		height auto
.b5__cnt__background
	position absolute
	left 0px
	top 0px
	width: 100%
	height 100%
	overflow hidden
	z-index: 0
	&:before
	&:after
		content ''
		width: 100%
		height 316px
		background linear-gradient(to top, rgba(6, 22, 13, 0) 3%, #06160d 97%)
		position absolute
		left 0px
		top 0px
		z-index: 2
	&:after
		background #06160d
		opacity 0.8
		height 100%
.b5__background
	position absolute
	left 0px
	top 0px
	width: 100%
	height 100%
	background-size cover
	background-position center center
	visibility hidden
	&.mobile
		visibility visible
.b5__video
	position absolute
	// left 50%
	// top 50%
	left 0px
	top 0px
	width: 100%
	height 100%
	// padding-top 40%
	iframe
		width: 100%
		height 180%
		position absolute
		left 50%
		top 50%
		transform translateX(-50%) translateY(-50%)
		
		
.b5__cnt
	position relative
	min-height 600px
	display flex
	align-items center
	justify-content center
.b5__text
	max-width 430px
	width: 100%
	p
		color #fff
		margin 0
		font-size: 15px
		line-height: 1.47
		text-align center
.b5__btn
	padding-top 30px
	display flex
	justify-content center
	.general__btn
		width 200px
@media screen and (max-width 768px)
	.b5__hoja1
		display none
@media screen and (max-width 767px)
	.b5__cnt
		min-height 400px

























































