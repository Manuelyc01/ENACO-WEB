@media screen and (max-width 1600px)
	.b7__hoja1
		right 5%
@media screen and (max-width 1280px)
	.b7__item
		padding 0 20px
		box-sizing border-box
@media screen and (max-width 768px)
	.b7__cnt
		width 100%
		flex-direction column
	// .b7__hoja1
	// .b7__hoja2
	// 	display none
	.b7__hoja1
		width: 80px
		top -5%
	.b7__hoja2
		width: 70px
		bottom 2%
	
	.b7
		padding-top 0		
		padding-bottom 60px
@media screen and (max-width 767px)
	.b7__cnt
		padding 60px 0
	.b7__center
		flex-direction column
		align-items center
		padding-bottom 0
		&:before
			display none
	.b7__item
		width: 86%
		max-width 100%
		padding 0
		&:nth-child(1)
			margin-bottom 80px
	.b7__hoja1
		right 0px





















