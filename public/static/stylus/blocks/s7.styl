

.b7
	padding 110px 0 130px 0
	position relative
.b7__hoja1
.b7__hoja2
	position absolute
	img
		display block
		max-width 100%
		height auto
.b7__hoja1
	top 5%
	right 16%
.b7__hoja2
	bottom 0%
	left 0px
.b7__cnt
	padding 110px 0 70px 0
	background-color #fafafa
.b7__center
	display flex
	justify-content space-around
	position relative
	padding-bottom 30px
	&:before
		content ''
		width: 3px
		height 100%
		background-color c-1
		display block
		position absolute
		left 0px
		right 0px
		margin auto
		bottom 0px
.b7__item
	max-width 385px
	width: 100%
	text-align center
	.general__title
		p
			margin 0
			padding-top 15px
			padding-bottom 35px
			color c-2
			strong 
				font-weight: normal
				font-family: t-1
	p
		font-size: 15px
		line-height: 1.3
		margin 0
