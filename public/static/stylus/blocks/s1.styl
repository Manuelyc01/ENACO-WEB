
.b1
	position relative
	overflow hidden
// .b1__nube2
.b1__nube1
	position absolute
	z-index: 2
	max-width 100%
	width: 100%
	pointer-events none
	img
		width 100%
		height auto
		
.b1__nube1
	left 0px
	top 40%
// .b1__nube2
// 	right 0px
// 	top 67%
.b1__slider
	.owl-item 
		.b1__text
			transform scaleY(1.16) translateY(5rem)
			// transform translateY(5rem)
			transform-origin top center
			will-change transform
			transition opacity .8s cubic-bezier(.165,.84,.44,1),transform .8s cubic-bezier(.165,.84,.44,1)
			opacity 0
		&.active
			.b1__text
				opacity 1
				transform scaleY(1) translateY(0)
	.owl-dots
		position absolute
		left 0px
		bottom 100px
		width: 100%
		display flex
		justify-content center
	.owl-dot
		width: 25px
		height 25px
		border-radius 100%
		display flex
		align-items center
		justify-content center
		border 2px solid transparent
		box-sizing border-box
		margin 0 5px
		span
			width: 13px
			height 13px
			background-color #fff
			border-radius 100%
		&.active
			border-color #fff
.b1__slide
	position relative
	figure
		position absolute
		left 0px
		top 0px
		bottom 0px
		right 0px
		margin auto
		width: calc(100% - 60px)
		height: calc(100% - 60px)
		background-size cover
		background-position center center
		&:before
			content ''
			width: 100%
			height 242px
			background linear-gradient(to bottom, rgba(9, 29, 18, 0) 3%, #091d12);
			position absolute
			left 0px
			bottom 0px
.b1__cnt
	height 100vh
	min-height 640px
	display flex
	align-items center
	justify-content flex-end
	position relative
	z-index: 1
.b1__text
	max-width 450px
	width: 100%
	.general__title
		padding-bottom 10px
	p
		font-size: 20px
		font-family: t-1
		margin 0
.b1__btn
	padding-top 40px
	.general__btn
		width: 145px

@media screen and (max-width 1024px)
	.b1__slide figure
		width: 100%
		height 100%
