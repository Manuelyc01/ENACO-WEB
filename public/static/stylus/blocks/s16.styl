.industrial-css
	.cnt-wrapper
		padding-top  0 !important


.trandicional-css
	.footer__suscripcion
		display none
	.footer
		background-color #fff
	.header__cnt__center
	.b15
		background-color #f4eee9
		border-left 30px solid #fff
		border-right 30px solid #fff
	.b15
		padding-top 0
		padding-bottom 70px
.b16
	background-color #f4eee9
	border-left 30px solid #fff
	border-right 30px solid #fff
	padding-bottom 170px
	position relative
	overflow hidden
	&:before
		content ''
		width: 100%
		height 240px
		background linear-gradient(to bottom, rgba(244, 238, 233, 0) 4%, #f4eee9 96%)
		position absolute
		left 0px
		bottom 0px
		z-index: 2
	&.b16__industrial
		padding-bottom 0
		margin-top 30px
		&:before
			display none
		.b16__cnt
			padding-top  120px
			box-sizing border-box
			padding-bottom 0
			height calc(100vh - 30px)
			min-height 780px
		.b16__left
			.general__title
				line-height 1.06
	.b1__nube1
		top 0%
		z-index: 0
.b16__figure
	position absolute
	left 0px
	bottom 0px
	width: 100%
	height 100%
	background-size cover
	background-position center center		
.b16__cnt
	display flex
	justify-content space-between
	padding-top 22px
	position relative
	z-index: 2
.b16__left
	max-width 428px
	width: 100%
	padding-top 5px
	.general__title
		margin-bottom 36px
		h2
			line-height: 1
	p
		font-size: 15px
		line-height: 1.47
.b16__etiqueta
	display flex
	margin-bottom 14px
	span
		margin 0
		color #787878
		font-size: 15px
		line-height: 1
		font-family: t-4
		height 30px
		display flex
		align-items center
		// padding 0 20px
.b16__etiqueta__i
	display flex
	align-items center
	padding-bottom 16px
	padding-top 14px
	i
		font-size: 15px
		color c-1
	span
		margin 0
		font-size: 15px
		font-family t-1
		color c-1
		margin-left 10px


.b16__center
	position relative
	width: 388px
.b16__adorno
	position absolute
	right -20%
	bottom 0px
	width: 150%
	height auto
	z-index: 1
.b16__tab
	position absolute
	left 0px
	bottom 0px
	visibility: hidden
	img
		// max-width 100%
		width 100%
		height auto
		display block
		position relative
		z-index: 1
		&:nth-child(2)
			position absolute
			left 0px
			bottom 0px
			z-index: 0
			width: 140px
	&.active
		position relative
		visibility: visible
.b16__right
	max-width 308px
	width: 100%
	padding-top 98px
.b16__cnt__tab
	li
		margin 0
		width: 100%
		margin-bottom 13px
	a
		min-height 40px
		// background-color #e1e0e0
		display flex
		align-items center
		justify-content center
		border 1px solid #e1e0e0
		border-radius 3px
		text-transform uppercase
		padding 5px 20px
		box-sizing border-box
		font-size: 13px
		&.active
			background-color #e1e0e0
		@media screen and (min-width 1025px)
			&:hover
				background-color rgba(225, 224, 224, 0.42)
				
.b16__ubica
	padding-top 17px
	display flex
	align-items flex-start
	color #787878
	opacity: 0.6
	i
		margin-right 10px
		font-size: 16px
	p
		font-size: 13px
		flex-grow 1.38
		margin 0
.b16__btn
	padding-top 92px

@media screen and (max-width 1280px)
	.b16__center
		max-width 240px
	.b16__left
		max-width 348px
@media screen and (max-width 1024px)
	.b16__center
		width 300px
	.b16__left
		max-width 340px
	.b16__right
		max-width 280px
	.b16__tab img:nth-child(2)
		width: 100px
	.trandicional-css .header__cnt__center, .trandicional-css .b15
	.b16
		border 0
@media screen and (max-width 960px)
	.b16
		.b1__nube1, .b1__nube2
			display none
	.b16__cnt
		flex-flow row wrap
		justify-content center
	.b16__left
		max-width 100%
		margin-bottom 30px
	.b16__center
		max-width 100%
	.b16__right
		margin-left 30px
	.b16__left p
		text-align justify
	
	.b16
		padding-bottom 60px
		&:before
			display none
	.b16.b16__industrial
		margin-top 0
		.b16__cnt
			margin-bottom 0
			height 500px
			min-height 100%
			padding-top 80px
		
@media screen and (max-width 767px)
	.b16__center
		width 240px
	.b16__adorno
		display none
	.b16__tab img:nth-child(2)
		width: 50px
	.b16__right
		max-width 100%
		margin-left 0
		padding-top 30px
	.b16__btn
		padding-top 30px




















