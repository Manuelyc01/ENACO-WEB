.nosotros-css
	.wrapper
		overflow hidden

.b8__title
	position relative
	max-width 432px
	width: 100%
	margin auto
	text-align center
	padding-bottom 60px
	&:before
		content ''
		width: 3px
		height 48px
		background-color c-1
		display block
		position absolute
		left 0px
		right 0px
		margin auto
		bottom 0px
.b8__cnt
	max-width 1400px
	width: 94%
	margin auto
	padding 60px 0 100px 0
.b8__slider
	display flex
	justify-content center
	position relative
	&:before
		content ''
		width: 100%
		height 1px
		// border-top 1px dashed #787878
		background-image: linear-gradient(to right, #333 40%, rgba(255, 255, 255, 0) 20%)
		background-position: top
		background-size: 10px 1px
		background-repeat: repeat-x
		position absolute
		left 0px
		// bottom 50%
		bottom calc(50% + 31px)
		box-sizing border-box
	.owl-item
		.b8__slide
			width: 100%
	.owl-nav
		position absolute
		left 0px
		top 0
		height 100%
		width: 100%
		display flex
		justify-content space-between
		align-items center
		visibility hidden
		box-sizing border-box
		padding-bottom 61px
	.owl-prev
	.owl-next
		visibility visible
		width: 46px
		height 46px
		background-color #06160d
		border-radius 100%
		display flex
		justify-content center
		align-items center
		color #fff
		font-size: 19px
	.owl-next
		&.disabled
			opacity 0
.b8__slide
	padding 0 50px
	width: 50%
	box-sizing border-box
	display flex
	flex-direction column-reverse
.b8__item
	display flex
	position relative
	box-sizing border-box
	// min-height 355px
	min-height 296px
	figure
		margin 0
		width: 215px
		img
			max-width 100%
			height auto
			display block
			width: inherit !important
	&:nth-child(2)
		padding-bottom 15px
		padding-left 56px
		justify-content flex-end
		.b8__text
			// padding-top 60px
			margin-left 40px
		&:before
			content ''
			width: 1px
			// height 164px
			height 146px
			// border-top 1px dashed #787878
			background-image: linear-gradient(to top, #333 40%, rgba(255, 255, 255, 0) 20%)
			background-position: top
			background-size: 1px 10px
			background-repeat: repeat-y
			position absolute
			// right 345px
			right 51%
			bottom 0px
			box-sizing border-box
		&:after
			content ''
			width: 20px
			height 20px
			background-color c-0
			border-radius 100%
			position absolute
			// right 335px
			right 49.2%
			bottom -13px
	&:nth-child(1)
		padding-top 64px
		flex-direction row-reverse
		padding-right 30px
		justify-content flex-start
		.b8__text
			margin-right 40px
			padding-top 15px
			&:before
				content ''
				width: 1px
				height 63px
				// border-top 1px dashed #787878
				background-image: linear-gradient(to top, #333 40%, rgba(255, 255, 255, 0) 20%)
				background-position: top
				background-size: 1px 10px
				background-repeat: repeat-y
				position absolute
				left 0px
				bottom 100%
				box-sizing border-box
			&:after
				content ''
				width: 20px
				height 20px
				background-color c-0
				border-radius 100%
				position absolute
				left -10px
				top -73px
.b8__text
	max-width 288px
	width: 100%
	position relative
	span
		font-size: calc(35px + (70 - 35) * ((100vw - 320px) / (1920 - 320)))
		font-family t-4
		-webkit-text-stroke: 0.5px #979797
		-webkit-text-fill-color: white;
		display block
		margin-bottom 15px
		line-height: 1
	h3
		font-size: 20px
		color c-1
		margin 0
		font-family t-4
		margin-bottom 15px
		min-height 40px
	p
		font-size: 15px
		line-height: 1.37
		margin 0
		// min-height 140px

@media screen and (max-width 1440px)
	.b8__item:nth-child(2):before
		right 54%
		height 116px
		bottom 12px
	.b8__item:nth-child(2):after
		right 52%
		bottom 10px
	.b8__item:nth-child(1) .b8__text:before
		height 83px
	.b8__item:nth-child(1) .b8__text:after
		top -94px
	.b8__text p
		font-size: 14px
@media screen and (max-width 1366px)
	.b8__item:nth-child(2):before
		right 57%
	.b8__item:nth-child(2):after
		right 55.4%
@media screen and (max-width 1280px)
	.b8__item:nth-child(2):before
	// 	right 51%
		bottom -12px
	.b8__item:nth-child(2):after
		right 55.3%
		bottom -21px
	.b8__item:nth-child(1) .b8__text:before
		top -63px
	.b8__item:nth-child(1) .b8__text:after
		top -63px
	// 	height 57px
	.b8__slider
		.owl-nav
			padding-bottom 0
	.b8__slider:before
		bottom 50%
	.b8__item
		min-height 264px
		&:nth-child(2) 
			padding-left 30px
			.b8__text
				margin-left 20px
				padding-top 20px
		&:nth-child(1) 
			padding-right 20px
			.b8__text
				margin-right 20px
	.b8__text
		max-width 58.2%
		p
			font-size: 13px
	.b8__slide
		padding 0 20px
@media screen and (max-width 1024px)
	// .b8__slider .owl-nav
	// 	display none
	.b8__slide
		padding 0 30px 
@media screen and (max-width 1023px)
	.b8__cnt
		padding-bottom 60px
		padding-top 30px
	.b8__text p
		min-height 100%
	.b8__item
		// padding 0 5px
		// box-sizing border-box
		padding 0 
		min-height 300px
		&:nth-child(2) 
			padding-left 3px
			align-items flex-end
			padding-bottom 40px
			figure
				margin auto 0
			&:before
			&:after
				display none
		&:nth-child(1)
			// margin-left 50px 
			padding-right 3px
			justify-content space-between
			position relative
			padding-top 60px
			.b8__text
				position static
				padding-top 0
				&:after
				&:before
					display none
		figure
			width: 120px
		img
			width: 50%
	.b8__text
		max-width 100%
		flex 1
	.b8__slide
		padding 0




















