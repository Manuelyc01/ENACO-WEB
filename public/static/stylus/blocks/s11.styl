.equipo-css
	.footer
		background-color #fff
	.footer__suscripcion
		display none

.b11
	padding-top 30px
.b11__title
	text-align center
	position relative
	padding-bottom 60px
	&:before
		content ''
		width: 3px
		height 44px
		background-color c-1
		display block
		position absolute
		left 0px
		right 0px
		margin auto
		bottom 0px
.b11__cnt__items
	padding-top 42px
	padding-bottom 56px

.b11__cnt__items
.b11__item__presidente
.b11__item__gerente
	width: 100%
	display flex
	flex-flow row wrap
	justify-content flex-start
.b11__item__presidente
.b11__item__gerente
	justify-content center
.b11__item__presidente
	.b11__item
		width: 100%
		display flex
		align-items center
		justify-content center
		background-color #fff
		margin-left 0
		figure
			overflow hidden
			height 192px
		img
			height 100%
			// top 60%
			width: auto
			filter grayscale(100%)
			position relative
			// transform translateY(-50%)
	.b11__text
		max-width 378px
		width: 100%
		text-align left
		margin-left 50px
		padding-top 0px
		padding-right 12px
		h3
			font-size: 20px
		p
			font-size: 25px
.b11__item__gerente
	.b11__item
		// width: calc(33.3333% - 36px)
		flex 1
		display flex
		align-items center
		justify-content center
		background-color #fff
		margin-left 24px
		@media screen and (min-width 961px) and (max-width 2666px)
			
			&:nth-of-type(3n + 1)
				margin-left 0
	.b11__text
		text-align left
		padding-top 0px
		padding-left 12px
		padding-right 12px
		max-width 260px
		box-sizing border-box
		flex none
		width 55%
@media screen and (min-width 1025px) and (max-width 2666px)
	.b11__cnt__items
		>a
			width: calc(16.6666666667% - 20px)
			margin-left 24px
			&:nth-of-type(6n + 1)
				margin-left 0
@media screen and (min-width 769px) and (max-width 1024px)
	.b11__cnt__items
		>a
			width: calc(20% - 19.2px)
			margin-left 24px
			&:nth-of-type(5n + 1)
				margin-left 0
@media screen and (min-width 481px) and (max-width 768px)
	.b11__cnt__items
		>a
			width: calc(25% - 18px)
			margin-left 24px
			&:nth-of-type(4n + 1)
				margin-left 0
@media screen and (min-width 0px) and (max-width 480px)
	.b11__cnt__items
		>a
			width: calc(50% - 6px)
			margin-left 12px
			&:nth-of-type(2n + 1)
				margin-left 0
.b11__item
	margin 0
	border 26px solid #f6f6f6
	box-sizing border-box
	background-color #f6f6f6
	margin-bottom 24px
	figure
		margin 0
	img
		max-width 100%
		height auto
		display block
.b11__text
	text-align center
	padding-top 14px
	
	flex 1
	h3
		color c-1
		font-size: 15px
		line-height: 1.27
		margin-bottom 5px
	p
		font-size: 15px
		font-family: t-1
		margin 0




.b11__btn
	display flex
	justify-content center
	.general__btn
		width: 236px

.popup__cnt
	display none
	max-width 686px
	width: 100%
	position relative
	background-color #f6f6f6
	margin auto
	// border 26px solid #f6f6f6
	box-sizing border-box
	padding 40px 40px
	box-sizing border-box
	.close-boxlight
		top -50px
		right 0px
		border 0
		background-color #f6f6f6
		border-radius 100%
		display flex
		align-items center
		justify-content center
		line-height: 1
		height 31px
		width: 31px
		&:after
			content "\e912"
			font-family icomoon
			font-size: 16px
			
.popup__center
	display flex
	justify-content center
	align-items center
	&.organigrama
		figure
			max-width 650px
			width: 100%
	figure
		width: 228px
		img
			width: 100%
			height auto
			display block
	.b11__text
		text-align left
		padding-left 42px
		flex 1
		h3
			color #245e3c
			margin-bottom 9px
		h2
			font-size: 25px
			color c-1
			line-height: 1.2
			padding-bottom 20px
			margin 0
			border-bottom 1px solid #979797
			margin-bottom 20px
			font-family: t-4
	ul
		padding-bottom 26px
		li
			width: 100%
			font-size: 15px
			line-height: 1.5
		a
			width: 100%
			display flex
			align-items flex-start
			i
				width: 25px
				margin 0
				font-size: 12px
				padding-top 3px
			span
				margin 0
	p
		font-size: 15px
		line-height: 1.3
		font-family t-0

@media screen and (max-width 1440px)
	.popup__cnt
		max-width 550px
	.popup__cnt .close-boxlight
		top 5px
@media screen and (max-width 960px)
	.b11__item__gerente .b11__item
		width: 100%
		flex inherit
		margin-left 0
		justify-content center
	.b11__text
		flex inherit
	.b11__item__presidente
		// .b11__item
		// 	img
		// 		height 210px
		// 	figure
		// 		width: 175px 
		.b11__text
			flex 1
			margin-left 20px
			p
				font-size: 20px
@media screen and (max-width 768px)
	.b11__item__gerente .b11__text
	.b11__item__presidente .b11__text
		max-width 200px
		width: 100%
	
	.b11__item__presidente 
		.b11__text 
			h3
			p
				font-size: 15px
				

@media screen and (max-width 767px)
	.b11__item__presidente
		.b11__item
			img
				height 200px
			figure
				height: 175px 
		.b11__text
			max-width 100%
			flex 1
		// 	p
		// 		font-size: 15px
	.b11__item__gerente
		.b11__item figure
			width: 165px
		.b11__text
			max-width 100%
			flex 1
	.popup__cnt
		padding 30px
	.popup__center
		flex-direction column
		.b11__text
			padding-left 0
			padding-top 20px
			h2
				line-height: 1.3
	.popup__cnt .close-boxlight
		top 10px
		right 10px





















