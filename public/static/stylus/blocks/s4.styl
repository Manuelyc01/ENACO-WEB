

.b4
	position relative
	z-index: 1
	figure
		position absolute
		left 0px
		top 0px
		width: 100%
		height 100%
		background-size: cover
		background-position center center
		&:before
			content ''
			width: 100%
			height 100px
			background linear-gradient(to top, rgba(255, 255, 255, 0) 3%, #fff)
			position absolute
			left 0px
			top 0px
			z-index: 2
		&:after
			content ''
			width: 100%
			height 316px
			background linear-gradient(to bottom, rgba(6, 22, 13, 0) 5%, #06160d 96%)
			position absolute
			left 0px
			bottom 0px
	@media screen and (min-width 1025px)
		.scroll-item
			transform scaleY(1.26) translateY(5rem)
			// transform translateY(5rem)
			transform-origin top center
			will-change transform
			transition opacity .8s cubic-bezier(.165,.84,.44,1),transform .8s cubic-bezier(.165,.84,.44,1)
			opacity 0
			&.active-top
				opacity 1
				transform scaleY(1) translateY(0)
				// transform translateY(0)
.b4__title
	min-height 600px
	display flex
	align-items center
	justify-content center
	position relative
	box-sizing border-box
	padding-top 160px
	&:before
		content ''
		width: 3px
		height 178px
		background-color c-1
		display block
		position absolute
		left 0px
		right 0px
		margin auto
		bottom -98px
	.general__title
		max-width 790px
		width: 100%
		text-align center
		h2
			color #fff
@media screen and (max-width 768px)
	.b4__title
		padding-top 0
		min-height 400px
	.b4__title:before
		height 150px
		bottom  -60px











































